<h1><%= title %></h1>

<%- messages() %>

<% if (errors && errors.array) { %>
  <ul class="errors">
    <% errors.array().forEach(function(error) { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<h2>Welcome <%= locals.accountData.account_firstname %></h2>

<p><a id="account-update-link" href="/account/update/<%= locals.accountData.account_id %>">Update Account Information</a></p>

<% if (locals.accountData.account_type === "Employee" || locals.accountData.account_type === "Admin") { %>
  <h3>Inventory Management</h3>
  <p><a id="manage-inventory-link" href="/inv">Manage Inventory</a></p>
<% } %>